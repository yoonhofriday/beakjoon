#include <iostream>

using namespace std;

int main(void)
{
	int num, max = 0;
	int arr[9];

	for (int i = 0; i < 9; i++)
	{
		cin >> num;
		arr[i] = num;
	}

	for (int i = 0; i < 9; i++)
	{
		if (arr[i] > max)
		{
			max = arr[i];
			num = i;
		}
	}

	cout << max << endl;
	cout << num + 1 << endl;


	return 0;
}
